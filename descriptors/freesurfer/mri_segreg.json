{
  "tool-version": "7.4.1",
  "name": "mri_segreg",
  "author": "FreeSurfer Developers",
  "description": "MRI Segregation tool",
  "command-line": "mri_segreg [INPUT_FILE] [OUTPUT_FILE]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Input image file. All formats accepted by mri_convert can be used.",
      "value-key": "[INPUT_FILE]",
      "type": "File",
      "optional": false,
      "id": "input_file",
      "name": "Input file"
    },
    {
      "description": "Output file for the processed image",
      "value-key": "[OUTPUT_FILE]",
      "type": "String",
      "optional": false,
      "id": "output_file",
      "name": "Output file",
      "default-value": "output.mgz"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_FILE]",
      "description": "Output file generated by mri_segreg",
      "id": "outfile",
      "name": "Output file"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}
