{
  "tool-version": "24.2.06",
  "name": "help_format",
  "author": "AFNI Developers",
  "description": "Formats text by converting URLs into HTML hyperlinks",
  "command-line": "help_format [STDIN]",
  "container-image": {
    "type": "docker",
    "image": "afni/afni_make_build:AFNI_24.2.06"
  },
  "inputs": [
    {
      "description": "Standard input text to be formatted",
      "value-key": "[STDIN]",
      "type": "String",
      "optional": false,
      "id": "stdin",
      "name": "Standard Input Text"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "formatted_output.html",
      "description": "The formatted text with hyperlinks",
      "id": "formatted_output",
      "name": "Formatted Output"
    }
  ],
  "url": "https://afni.nimh.nih.gov/"
}
